<div class="container">
  <h1>Bestellungen</h1>

  <p id="notice"><%= notice %></p>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-condensed">


      <thead>
      <tr>
        <th>Bestellnummer</th>
        <th>Pizzanr</th>
        <th>Bezahlt</th>
        <th>Größe</th>
        <th>Ausgegeben</th>
        <th>Name</th>
        <th>Ip</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @ausgabes.each do |pizza| %>
          <tr>
            <td><%= pizza.id %></td>
            <td><%= pizza.pizzanr %></td>
            <td><%= pizza.bezahlt ? 'Ja' : 'Nein' %></td>
            <td><%= pizza.grosse ? 'Groß' : 'Klein' %></td>
            <td><%= pizza.augegeben ? 'Ja' : 'Nein' %></td>
            <td><%= pizza.name %></td>
            <td><%= pizza.ip %></td>
            <td><%= link_to '<span class="glyphicon glyphicon-ok"></span>'.html_safe, pizza, method: :delete, class: 'btn btn-primary' %></td>
           </tr>
      <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>